<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/slightlyGrey"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLength="100"
        android:singleLine="true"
        android:text="Jaufenlift SP.PS100.INB1_1"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textview_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imageview_bridgeable"
        android:ellipsize="end"
        android:maxLength="100"
        android:maxLines="1"
        android:text="Switch flooding pump station 1"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textview_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageview_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_above="@id/textview_body"
        android:text="22.11.2017 17:00:00"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@android:color/darker_gray"
        android:textStyle="normal" />

    <ImageView
    android:id="@+id/imageview_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/textview_title"
    android:padding="1dp"
    app:srcCompat="@mipmap/warn"/>

    <ImageView
    android:id="@+id/imageview_bridgeable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textview_title"
    android:layout_toStartOf="@+id/imageview_type"
    android:padding="1dp"
    app:srcCompat="@mipmap/bridgeable" />





</RelativeLayout>